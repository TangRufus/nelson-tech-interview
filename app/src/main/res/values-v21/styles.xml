<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SampleActionBar</item>
        <item name="android:statusBarColor">@color/auth0_primary</item>
        <item name="colorPrimary">@color/auth0_primary</item>
    </style>

    <style name="SampleActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/auth0_primary</item>
        <item name="android:statusBarColor">@color/auth0_primary</item>
        <item name="background">@color/auth0_primary</item>
    </style>


    <style name="NoBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/auth0_primary</item>
        <item name="colorPrimary">@color/auth0_primary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>